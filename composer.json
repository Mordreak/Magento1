{
    "name": "SplashSync/Magento1",
    "description": "Splash Module for Magento 1",

    "license": "GPL",

    "minimum-stability": "dev",
    "prefer-stable": true,
    
    "config": {
        "vendor-dir": "htdocs/app/code/local/SplashSync/Splash/vendor"
    },
        
    "autoload": {
        "psr-4": { "Splash\\Local\\": "htdocs/app/code/local/SplashSync/Splash/src" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },

    "require": {
        "php":              "^5.6",
        "splash/phpcore":   "*"
    },
    
    "require-dev": {
        "phpunit/phpunit":  "*"
    },
    
    "autoload-dev": {
        "psr-4": { "Splash\\Tests\\": "Tests/" }
    }
    
}