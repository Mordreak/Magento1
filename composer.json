{
    "name": "splas/magento1",
    "description": "Splash Module for Magento 1",

    "license": "MIT",

    "minimum-stability": "dev",
    "prefer-stable": true,
    
    "config": {
        "vendor-dir":               "app/code/local/SplashSync/Splash/vendor",
        "preferred-install":        "dist"
        
    },
        
    "autoload": {
        "psr-4": { "Splash\\Local\\": "app/code/local/SplashSync/Splash/src" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },

    "require": {
        "php":                              "^5.6|^7.0",
        "splash/phpcore":                   "1.4.4"
    },
    
    "require-dev": {
        "phpunit/phpunit":                  ">5.4",
        "composer/composer":                "^1.5",
        "j13k/yaml-lint":                   "^1.1",
        "jakub-onderka/php-parallel-lint":  "^1.0",
        "phpmd/phpmd":                      "^2.6",
        "phpro/grumphp":                    "^0.14.0",
        "sclable/xml-lint":                 "^0.2.4",
        "sebastian/phpcpd":                 ">3.0",
        "seld/jsonlint":                    "^1.7",
        "sensiolabs/security-checker":      "^4.1",
        "squizlabs/php_codesniffer":        "^3.2"
    },
    
    "autoload-dev": {
        "psr-4": { 
            "Splash\\Tests\\":  "app/code/local/SplashSync/Splash/Tests/"
        }
    }
    
}
